{
  "IsInDevelopment": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Elastic.Serilog.Sinks" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{MachineName}] {Message:lj} [{Level:u3}] {Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log_consultation_.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5,
          "fileSizeLimitBytes": 5120,
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Warning",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "bootstrapMethod": "Silent",
          "nodes": [
            //"http://elasticsearch:9200",
            "http://localhost:9200"
          ],
          "useSniffing": false,
          "dataStream": "my-dotnet",
          "debugMode": false

        }
      }
    ],
    "Enrich": [ "WithMachineName" ]
  },
  "MongoDBSettings": {
    "ConnectionString": "mongodb://root:root@mongodb-consultas:27017/Consultas?authSource=admin",
    "DatabaseName": "Consultas"
  },
  //"JaegerServer": "http://jaeger:4317",
  "JaegerServer": "http://localhost:4317",
  "FederateApi": {
    "AuthorityUrl": "https://login.microsoftonline.com/17bd9e60-9f68-46cb-88a4-44225ab2ece4",
    "AudienceUrl": "api://d58fda0d-5b25-46a5-8300-6200baf5429e"
  },
  "Kafka": {
    //"BootstrapServers": "kafka:9092",
    "BootstrapServers": "localhost:9092",
    "Topic": "consultation-topic",
    "GroupId": "wgutierrez-id"
  }
}
